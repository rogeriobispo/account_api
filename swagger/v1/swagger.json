{
  "swagger": "2.0",
  "info": {
    "title": "API V1",
    "version": "v1"
  },
  "paths": {
    "/api/v1/clients/{id}": {
      "get": {
        "summary": "retrieve a cliente",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Client found",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                },
                "name": {
                  "type": "string"
                },
                "cpf": {
                  "type": "string"
                },
                "birthdate": {
                  "type": "date_time"
                }
              },
              "required": [
                "id",
                "name",
                "cpf",
                "birthdate"
              ]
            }
          },
          "404": {
            "description": "client not found"
          }
        }
      }
    }
  }
}